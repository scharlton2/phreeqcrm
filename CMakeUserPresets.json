      "major": 3,
      "minor": 23,
      "patch": 0
    },
    "configurePresets": [
      {
        "name": "vs2019-intel-classic-fortran",
        "condition": {
          "type": "equals",
          "lhs": "${hostSystemName}",
          "rhs": "Windows"
        },  
        "displayName": "vs2019-intel-classic-fortran",
        "description": "",
        "generator": "Visual Studio 16 2019",
        "toolset": "Intel C++ Compiler 19.2",
        "binaryDir": "${sourceDir}/build/${presetName}",
        "cacheVariables": {
          "PHREEQCRM_FORTRAN_TESTING": "ON"
        },
        "environment": {
        }
      },
      {
        "name": "vs2019-intel-classic-fortran-shared",
        "condition": {
          "type": "equals",
          "lhs": "${hostSystemName}",
          "rhs": "Windows"
        },  
        "displayName": "vs2019-intel-classic-fortran-shared",
        "description": "",
        "generator": "Visual Studio 16 2019",
        "toolset": "Intel C++ Compiler 19.2",
        "binaryDir": "${sourceDir}/build/${presetName}",
        "cacheVariables": {
          "BUILD_SHARED_LIBS": "ON",
          "PHREEQCRM_FORTRAN_TESTING": "ON"
        },
        "environment": {
        }
      }
    ],
    "buildPresets": [
      {
        "name": "default",
        "configurePreset": "default"
      }
    ],
    "testPresets": [
      {
        "name": "default",
        "configurePreset": "default",
