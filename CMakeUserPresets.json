          {
            "type": "configure",
            "name": "default"
          },
          {
            "type": "build",
            "name": "default"
          },
          {
            "type": "test",
            "name": "default"
          },
          {
            "type": "package",
            "name": "default"
          }
        ]
      }
    ],
