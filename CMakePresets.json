{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja-static",
      "displayName": "Ninja static",
      "description": "Default static build using Ninja generator",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/_builds/${presetName}",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": {
          "type": "BOOL",
          "value": "OFF"
        }
      }
    },
    {
      "name": "ninja-static-vcpkg",
      "inherits": "ninja-static",
      "displayName": "Ninja static using vcpkg",
      "description": "Default static build using Ninja generator and vcpkg",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "PATH",
          "value": "$env{VCPKG_INSTALLATION_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    },
    {
      "name": "ninja-static-yaml",
      "inherits": "ninja-static",
      "displayName": "Ninja static with YAML support",
      "description": "Default static build using Ninja generator and with YAML support",
      "cacheVariables": {
        "PHREEQCRM_WITH_YAML_CPP": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "ninja-shared",
      "displayName": "Ninja shared",
      "description": "Default shared build using Ninja generator",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/_builds/${presetName}",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "ninja-shared-vcpkg",
      "inherits": "ninja-shared",
      "displayName": "Ninja shared using vcpkg",
      "description": "Default shared build using Ninja generator and vcpkg",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/_builds/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "PATH",
          "value": "$env{VCPKG_INSTALLATION_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    },
    {
      "name": "ninja-multi",
      "inherits": "ninja-static",
      "displayName": "Ninja Multi-Config",
      "description": "Default build using Ninja Multi-Config generator",
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "vs2019-static",
      "inherits": "ninja-static",
      "displayName": "vs2019-static",
      "description": "Build static library using vs2019",
      "generator": "Visual Studio 16 2019",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "vs2019-static-vcpkg",
      "inherits": "ninja-static",
      "displayName": "vs2019-static-vcpkg",
      "description": "Build static library using vs2019 vcpkg and yaml",
      "generator": "Visual Studio 16 2019",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "PATH",
          "value": "$env{VCPKG_INSTALLATION_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },
        "PHREEQCRM_WITH_YAML_CPP": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "vs2019-shared",
      "inherits": "ninja-shared",
      "displayName": "vs2019-shared",
      "description": "Build shared library using vs2019",
      "generator": "Visual Studio 16 2019",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ninja-static",
      "configurePreset": "ninja-static"
    },
    {
      "name": "ninja-shared",
      "configurePreset": "ninja-shared"
    },
    {
      "name": "vs2019-static",
      "configurePreset": "vs2019-static"
    },
    {
      "name": "vs2019-static-vcpkg",
      "configurePreset": "vs2019-static-vcpkg"
    },
    {
      "name": "vs2019-shared",
      "configurePreset": "vs2019-shared"
    }
  ],
  "testPresets": [
    {
      "name": "ninja-static",
      "configurePreset": "ninja-static",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    },
    {
      "name": "ninja-shared",
      "configurePreset": "ninja-shared",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    },
    {
      "name": "vs2019-static",
      "configurePreset": "vs2019-static",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    },
    {
      "name": "vs2019-static-vcpkg",
      "configurePreset": "vs2019-static-vcpkg",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    },
    {
      "name": "vs2019-shared",
      "configurePreset": "vs2019-shared",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    }
  ],
  "vendor": {
    "example.com/ExampleIDE/1.0": {
      "autoFormat": false
    }
  }
}
